{
  "name": "lpwanserver-rest",
  "version": "1.0.1",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/rest",
    "mocha": "export NODE_ENV=local;mocha",
    "e2e": "cp data/test.sqlite3.testSuiteStartingDB test/e2e/lpwanserver.sqlite3;export NODE_ENV=e2e; mocha test/e2e --exit --bail --timeout 10000",
    "e2e-log": "cp data/test.sqlite3.testSuiteStartingDB test/e2e/lpwanserver.sqlite3;export NODE_ENV=e2e-log; mocha test/e2e --exit",
    "ttn-test": "export NODE_ENV=ttn-unit;mocha test/ttn-unit",
    "loriot-test": "export NODE_ENV=loriot-unit;mocha test/loriot-unit",
    "test": "./bin/unit-tests && ./bin/api-tests",
    "silent": "npm start > output.txt 2> error.txt",
    "localcert": "export NODE_ENV=localcert;npm start",
    "local": "export NODE_ENV=local;npm start",
    "lint": "eslint rest/",
    "doc": "jsdoc -r ./rest -d ./docs",
    "mac": "export NODE_ENV=mac;npm start",
    "dev": "NODE_ENV=local nodemon --watch rest ./bin/rest",
    "e2e-docker": "export NODE_ENV=e2e; ./bin/e2e",
    "package": "node bin/package.js",
    "package-test": "node bin/package-test.js",
    "package-api-test": "node bin/package-api-test.js",
    "package-e2e-test": "node bin/package-e2e-test.js",
    "test2": "./bin/unit-tests && ./bin/api-tests",
    "test-with-coverage": "istanbul cover _mocha test2.0/unit/models --report lcovonly -- -R spec && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage"
  },
  "dependencies": {
    "async": "~2.6.1",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "codacy-coverage": "^3.3.0",
    "connect-ensure-login": "~0.1.1",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "crypto": "~1.0.1",
    "db-migrate": "^0.11.4",
    "debug": "^4.1.0",
    "express": "^4.16.4",
    "express-busboy": "^7.0.1",
    "express-session": "^1.15.6",
    "hjson": "^3.1.2",
    "jsdoc": "^3.5.5",
    "jsmin": "~1.0.1",
    "jsonwebtoken": "^8.4.0",
    "mkdirp": "~0.5.1",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "nconf": "^0.10.0",
    "nodemailer": "^4.7.0",
    "object-sizeof": "^1.3.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pug": "^2.0.3",
    "ramda": "^0.26.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.2",
    "serve-favicon": "^2.5.0",
    "session-file-store": "^1.2.0",
    "sqlite3": "^4.0.4",
    "uuid": "^3.3.2",
    "winston": "^3.1.0",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0"
  }
}
