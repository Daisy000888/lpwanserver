{
  "extends": "standard",
  "rules": {
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": "should|expect|assert"
      }
    ]
  },
  "env": {
    "mocha": true
  },
  "globals": {
    "expect": "readonly",
    "jest": "readonly"
  }
}
